 <div class="row align-items-center vh-100">
  <%= form_with(model: @beer, class: 'form bg-primary p-3') do |f| %>
    <div class="row m-3">
      <div class="col-md-4">
        <%= f.label :title, 'Title', class: 'form-label' %>
        <%= f.text_field(
          :title,
          class: 'form-control'
        ) %>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md-8">
        <%= f.label :description, 'Description', class: 'form-label' %>
        <%= f.text_field(
        :description,
        class: 'form-control'
        ) %>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md-auto">
        <%= f.label :position, 'Position', class: 'form-label' %>
        <%= f.select(
          :position,
          options_for_select(
            1..10,
            selected: @beer.position
          ),
          {},
          class: 'form-select'
        ) %>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md-auto">
        <div class="form-check">
          <%= f.check_box(
            :in_stock,
            class: 'form-check-input'
          ) %>
          <%= f.label :in_stock, 'In Stock?', class: 'form-label' %>
        </div>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md-auto">
        <%= f.submit(
          'Submit',
          class: 'btn btn-secondary'
        ) %>
      </div>
    </div>
  <% end %>
</div>