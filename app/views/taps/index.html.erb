<div class="row justify-content-center m-3">  
  <% @beers.each do |beer| %>
    <div class="col-md-3 bg-dark p-5 m-3<%= beer.in_stock ? ' text-light' : ' text-muted' %>">
      <div class="col-md-1">
        <h1><%= beer.position %></h1>
      </div>
      <% if beer.in_stock %>
        <div class="col-md-4">
          <h2 class="text-md-center"><%= beer.title %></h2>
        </div>
        <div class="col-md-6">
          <h2 class="text-md-center"><%= beer.description %></h2>
        </div>
      <% else %>
        <div class="col-md-4">
          <h2 class="text-md-center"><%= beer.title %> - OUT OF STOCK</h2>
        </div>
      <% end %>
    </div>
    <div class="col-auto">
      <div class="row align-items-end h-50">
        <%= fa_icon(
          'sort-up 2x',
          class: "ajax-update-position",
          'data-id': "#{beer.id}",
          'data-position': "#{beer.position - 1}"
          ) %>
      </div>
      <div class="row h-50">
        <%= fa_icon(
          'sort-down 2x',
          class: "ajax-update-position",
          'data-id': "#{beer.id}",
          'data-position': "#{beer.position + 1}"
          ) %>
      </div>
    </div>
  <% end %>
</div>