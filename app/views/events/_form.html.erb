<div class="row m-3">
  <div class="col-md-4">
    <%= f.label :title, 'Title', class: 'form-label' %>
    <%= f.text_field(
      :title,
      class: 'form-control'
    ) %>
  </div>
  <div class="col-md-8">
    <%= f.label :description, 'Description', class: 'form-label' %>
    <%= f.text_field(
    :description,
    class: 'form-control'
    ) %>
  </div>
</div>
<div class="row m-3">
  <div class="col-md-auto">
    <%= f.label :date, 'Date', class: 'form-label' %>
    <%= f.date_field(
      :date,
      class: 'form-control'
    ) %>
  </div>
  <div class="col-md-auto">
    <%= f.label :start_time, 'Starting Time', class: 'form-label' %>
    <%= f.time_field(
      :start_time,
      class: 'form-control'
    ) %>
  </div>
  <div class="col-md-auto">
    <%= f.label :end_time, 'Ending Time', class: 'form-label' %>
    <%= f.time_field(
      :end_time,
      class: 'form-control'
    ) %>
  </div>
</div>
<div class="row m-3">
  <div class="col-md-auto">
    <%= f.submit(
      'Submit',
      class: 'btn btn-secondary'
    ) %>
  </div>
</div>