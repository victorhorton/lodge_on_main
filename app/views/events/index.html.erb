<div class="col justify-content-center m-3">
  <div class="row my-2">
    <%= link_to(
      'Create Event',
      new_event_path,
      class: 'btn btn-primary'
    ) if session[:id].present? %>
  </div>
  <% @events.each do |event| %>
    <%= link_to(
      session[:id].present? ? edit_event_path(event) : event_path(event),
      class: 'row bg-dark text-light text-decoration-none p-5'
    ) do %>
      <div class="col-md-3">
        <div class="row">
          <h1><%= week_day(event.date) %></h1>
        </div>
        <div class="row">
          <p><%= readable_date(event.date) %></p>
        </div>
      </div>
      <div class="col-md-5">   
        <h2><%= event.title.titleize %></h2>
        <p><%= event.description.titleize %></p>
      </div>
      <div class="col-md-4">
        <div class="row">  
          <p class="col"><%= format_time(event.start_time) %> - <%= format_time(event.end_time) %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>