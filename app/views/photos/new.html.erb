 <div class="row align-items-center vh-100">
  <%= form_with(model: @photo, class: 'form bg-primary p-3') do |f| %>
    <%= f.text_field(
      :title,
      class: 'form-control'
    ) %>
    <%= f.text_field(
    :description,
    class: 'form-control'
    ) %>
    <%= f.file_field(
      :image,
      class: 'form-control'
    ) %>
    <%= f.submit(
      'Submit',
      class: 'btn btn-primary'
    ) %>
  <% end %>
</div>