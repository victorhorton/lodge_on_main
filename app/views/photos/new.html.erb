 <div class="row align-items-center vh-100">
  <%= form_with(model: @photo, class: 'form bg-primary p-3') do |f| %>
    <div class="row m-3">
      <div class="col-md-4">
        <%= f.label :title, 'Title', class: 'form-label' %>
        <%= f.text_field(
          :title,
          class: 'form-control'
        ) %>
      </div>
      <div class="col-md-8">
        <%= f.label :description, 'Description', class: 'form-label' %>
        <%= f.text_field(
        :description,
        class: 'form-control'
        ) %>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md">
        <%= f.file_field(
          :image,
          class: 'form-control'
        ) %>
      </div>
    </div>
    <div class="row m-3">
      <div class="col-md-4">
        <%= f.submit(
          'Submit',
          class: 'btn btn-dark'
        ) %>
      </div>
    </div>
  <% end %>
</div>